; CHECK-NEXT:    [[TMP9:%.*]] = phi i32 [ [[DEC]], [[FOR_BODY_FOR_END_CRIT_EDGE]] ], [ [[TMP9_PRE]], [[FOR_COND_FOR_END_CRIT_EDGE]] ]
; CHECK-NEXT:    ret i32 [[TMP9]]
