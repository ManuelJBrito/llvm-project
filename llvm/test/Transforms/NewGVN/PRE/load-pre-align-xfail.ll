; CHECK-NEXT:    br label [[FOR_END]]
; CHECK:       for.inc:
; CHECK-NEXT:    [[INDVAR_NEXT]] = add i32 [[I_0]], 1
; CHECK-NEXT:    br label [[FOR_COND]]
